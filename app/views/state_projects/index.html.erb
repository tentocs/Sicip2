<p id="notice"><%= notice %></p>

<h1>State Projects</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>State</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_projects.each do |state_project| %>
      <tr>
        <td><%= state_project.project %></td>
        <td><%= state_project.state %></td>
        <td><%= state_project.date %></td>
        <td><%= link_to 'Show', state_project %></td>
        <td><%= link_to 'Edit', edit_state_project_path(state_project) %></td>
        <td><%= link_to 'Destroy', state_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

