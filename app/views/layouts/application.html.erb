<script>
$('#mostrar-nav').on('click',function(){ //menu
$('#nav-menu').toggleClass('mostrar');}) //menu
$(document).ready(function(){
   $("#perfil_pequenno").hide();}); //ocultar perfil
$(document).ready(function(){
  $("button").click(function(){
    $("#perfil_pequenno").toggle();}); // hide y show perfil
});
function openNav() {
    document.getElementById("myMenuPlegable").style.width = "250px";
    document.getElementById("menu-sicip").style.marginLeft = "250px";
    document.getElementById("btn-perfil").style.marginRight = "290px";
   $(document).ready(function(){
   $("#icono-menu").hide();});

}

function closeNav() {
    document.getElementById("myMenuPlegable").style.width = "0";
    document.getElementById("menu-sicip").style.marginLeft= "0";
    document.getElementById("btn-perfil").style.marginRight = "40px";
    $(document).ready(function(){
   $("#icono-menu").show();});
}

function myFunction() {
    var popup = document.getElementById('myPopup');
    popup.classList.toggle('show');
}
