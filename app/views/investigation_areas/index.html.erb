<p id="notice"><%= notice %></p>

<h1 class = "center-align indigo-text darken-3-text">Áreas de Investigación</h1>
<h3 class= "white-text">
<a class="btn-floating btn-large waves-effect waves-light blue-grey lighten-2" style=" left: 750px " <%= link_to '+', new_investigation_area_path %> </a>
</h3>
<table class="container center-align col s12 m6 grey lighten-4">
  <thead>
    <tr>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigation_areas.each do |investigation_area| %>
      <tr>
        <td><%= investigation_area.description %></td>
        <td><%= link_to 'Ver', investigation_area %></td>
        <td><%= link_to 'Editar', edit_investigation_area_path(investigation_area) %></td>
        <td><%= link_to 'Eliminar', investigation_area, method: :delete, data: { confirm: 'Está usted seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>