<p id="Principal ui"><%= notice %></p>

<h1 class="center-align indigo-text darken-3-text"h>Unidades de Investigación</h1>
<h3 class= "white-text">
<a class="btn-floating btn-large waves-effect waves-light blue-grey lighten-2" style=" left: 750px " <%= link_to '+', new_research_unit_path %> </a>
</h3>

<table class="container center-align col s12 m6 grey lighten-4"">
  <thead>
    <tr>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @research_units.each do |research_unit| %>
      <tr>
        <td><%= research_unit.description %></td>
        <td><%= link_to 'Visualizar', research_unit %></td>
        <td><%= link_to 'Editar', edit_research_unit_path(research_unit) %></td>
        <td><%= link_to 'Eliminar', research_unit, method: :delete, data: { confirm: 'Está usted seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

